<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc"
    tools:context="com.example.nugraha10.kebudayaannusantara.prov.Jatim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/jatim" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/jatim"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="casual"
            android:textColor="@color/putih"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/item"></View>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/cornerr"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Jawa Timur"
                android:textColor="@color/putih"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/item"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/jatim1"
                android:textColor="@color/putih" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@drawable/cornerr">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rumah Adat Jawa Timur"
            android:textColor="@color/putih"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item"></View>
        <ImageView
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/rumahjatim"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="( Rumah Situbondo )"
            android:textColor="@color/item"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/putih"
            android:text="@string/rumahjatim"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/cornerr">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pakaian Adat Jawa Timur"
            android:textColor="@color/putih"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item"></View>
        <ImageView
            android:layout_width="170dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/pakaianjatim"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="( Pakaian Adat Madura )"
            android:textColor="@color/item"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/putih"
            android:text="@string/pakaianjatim"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/cornerr">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senjata Tradisional Jawa Timur"
            android:textColor="@color/putih"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item"></View>
        <ImageView
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/senjatajatim"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="( Celurit )"
            android:textColor="@color/item"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/putih"
            android:text="@string/senjatajatim"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/cornerr">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Makanan Khas Jawa Timur"
            android:textColor="@color/putih"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item"></View>
        <ImageView
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/makananjatim"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="( Rawon )"
            android:textColor="@color/item"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/putih"
            android:text="@string/makananjatim"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/cornerr">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarian Khas Jawa Timur"
            android:textColor="@color/putih"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/item"></View>
        <ImageView
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/tarianjatim"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="( Tari Remo )"
            android:textColor="@color/item"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/putih"
            android:text="@string/tarianjatim"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>