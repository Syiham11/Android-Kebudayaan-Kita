<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc"
    tools:context="com.example.nugraha10.kebudayaannusantara.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEBUDAYAAN NUSANTARA"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:textSize="25sp"
            android:layout_marginTop="45sp"
            android:textStyle="bold"
            android:textColor="@color/putih"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170sp"
            android:layout_marginTop="110sp"
            android:background="@drawable/peta"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34 PROVINSI INDONESIA"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="340sp"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:onClick="btnProv"
            android:textColor="@color/putih"
            android:id="@+id/provinsi"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="390sp"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:onClick="btnAbout"
            android:textColor="@color/putih"
            android:id="@+id/about"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KELUAR"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="440sp"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/putih"
            android:id="@+id/btn_logout"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            />
        <TextView
            android:id="@+id/txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="ID"/>

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="250dp"
            android:text="Username"/>


    </RelativeLayout>

</ScrollView>
